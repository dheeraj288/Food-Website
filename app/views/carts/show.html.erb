<h2 class="text-3xl font-bold mb-6 text-gray-800">🛒 Your Cart</h2>

<% if @cart_items.any? %>
  <div class="space-y-6">
    <% @cart_items.each do |item| %>
      <div class="bg-white rounded-xl shadow p-4 flex items-center justify-between border hover:shadow-md transition">

        <div class="flex items-center gap-4">
          <%= image_tag item.menu_item.image_url, class: "h-20 w-20 object-cover rounded" %>
          <div>
            <h3 class="text-lg font-semibold text-gray-800"><%= item.menu_item.name %></h3>
            <p class="text-sm text-gray-600">Price: ₹<%= item.menu_item.price %> × <%= item.quantity %></p>
          </div>
        </div>

        <div class="flex items-center gap-3">
          <%= form_with(model: item, url: cart_item_path(item), method: :patch, local: true, class: "flex gap-2 items-center") do |f| %>
            <%= f.number_field :quantity, value: item.quantity, min: 1,
                  class: "border rounded px-2 py-1 w-16 text-center text-gray-700" %>
            <%= f.submit "Update", class: "bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700" %>
          <% end %>

          <%= button_to "❌", cart_item_path(item), method: :delete, data: { confirm: "Remove this item?" },
                class: "text-red-600 hover:text-red-800 text-xl bg-transparent border-none" %>
        </div>

      </div>
    <% end %>
  </div>

  <div class="text-right mt-8">
    <%= button_to "✅ Proceed to Checkout", orders_path, method: :post,
          class: "mt-4 inline-block bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-full transition" %>
  </div>

<% else %>
  <p class="text-gray-600 text-center text-lg mt-10">
    Your cart is empty. Go add something delicious! 🍽️
  </p>
  <div class="text-center mt-6">
    <%= link_to "Browse Restaurants", restaurants_path,
          class: "inline-block bg-indigo-600 text-white px-5 py-2 rounded-full hover:bg-indigo-700 transition" %>
  </div>
<% end %>
