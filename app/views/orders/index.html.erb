<h2 class="text-3xl font-bold text-gray-800 mb-6">üßæ Your Orders</h2>

<% if @orders.any? %>
  <div class="space-y-6">
    <% @orders.each do |order| %>
      <div class="bg-white p-6 rounded-xl shadow border border-gray-100">
        <div class="flex justify-between items-center">
          <h3 class="text-xl font-semibold text-indigo-700">Order #<%= order.id %> - <%= order.restaurant.name %></h3>
          <span class="text-sm text-gray-500">Total: ‚Çπ<%= order.total %></span>
        </div>

        <ul class="mt-4 space-y-2">
          <% order.order_items.each do |oi| %>
            <li class="flex justify-between text-gray-700">
              <span><%= oi.menu_item.name %> √ó <%= oi.quantity %></span>
              <span>‚Çπ<%= oi.price * oi.quantity %></span>
            </li>
          <% end %>
        </ul>

        <div class="text-sm text-gray-500 mt-2">Placed on: <%= order.created_at.strftime("%d %b %Y, %I:%M %p") %></div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-600">No orders yet. Time to eat something! üçΩÔ∏è</p>
<% end %>
