<h2 class="text-3xl font-extrabold mb-6 text-gray-900 tracking-tight flex items-center gap-2">
  <span>ðŸ§¾</span> Order Summary - <%= @order.id %>
</h2>

<div class="bg-white p-8 rounded-xl shadow-lg border border-gray-200 max-w-3xl mx-auto">
  <div class="mb-8 space-y-2">
    <p class="text-gray-700 text-lg">
      Status: 
      <span class="text-indigo-600 font-semibold tracking-wide uppercase">
        <%= @order.status %>
      </span>
    </p>
    <p class="text-gray-500 text-sm">
      Placed on: <time datetime="<%= @order.created_at.iso8601 %>"><%= @order.created_at.strftime("%d %b %Y, %I:%M %p") %></time>
    </p>

    <% if @order.delivery_boy.present? %>
      <p class="text-green-700 font-semibold flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h1l3 7 4-9h7" />
        </svg>
        Delivery Boy: <span><%= @order.delivery_boy.name %></span>
      </p>
    <% else %>
      <p class="text-red-600 font-semibold italic">
        No delivery boy assigned yet.
      </p>
    <% end %>
  </div>

  <div class="space-y-6 border-t border-gray-100 pt-6">
    <% @order.order_items.each do |item| %>
      <div class="flex justify-between items-center gap-4 border-b border-gray-100 pb-4">
        <div class="flex items-center gap-4">
          <% if item.menu_item&.image_url.present? %>
            <%= image_tag item.menu_item.image_url, alt: item.menu_item.name, class: "w-20 h-20 rounded-lg object-cover shadow-sm" %>
          <% else %>
            <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center text-gray-400">
              N/A
            </div>
          <% end %>
          <div>
            <p class="font-semibold text-gray-900 text-lg leading-tight">
              <%= item.menu_item&.name || "Menu item not found" %>
            </p>
            <p class="text-gray-500 text-sm mt-1">
              Qty: <span class="font-medium"><%= item.quantity %></span> Ã— â‚¹<span class="font-medium"><%= item.price %></span>
            </p>
          </div>
        </div>
        <p class="text-indigo-700 font-bold text-xl">
          â‚¹<%= item.quantity * item.price %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="mt-8 text-right border-t border-gray-100 pt-6">
    <h3 class="text-2xl font-extrabold text-indigo-900 tracking-wide">
      Total: â‚¹<%= @order.total %>
    </h3>
  </div>

  <% if @order.status.in?(["confirmed", "dispatched", "out_for_delivery"]) %>
    <div class="mt-8 text-center">
      <%= link_to "ðŸšš Track Your Order", track_order_path(@order), class: "inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-8 rounded-full shadow-lg transition duration-300" %>
    </div>
  <% end %>

  <% unless ["paid", "confirmed"].include?(@order.status.downcase) %>
    <div id="payment-form" class="mt-10 max-w-md mx-auto bg-indigo-50 rounded-lg p-6 shadow-inner">
      <form id="stripe-form" class="space-y-6">
        <div id="card-element" class="border border-indigo-300 rounded-md p-4 bg-white shadow-sm"></div>

        <button type="submit"
                class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-md shadow transition duration-300">
          ðŸ’³ Pay â‚¹<%= @order.total %>
        </button>
      </form>
    </div>
  <% else %>
    <p class="mt-10 text-green-700 font-semibold text-center text-lg">
      Thank you! Your payment is <%= @order.status.capitalize %>.
    </p>
  <% end %>

    <div class="mt-12 border-t pt-8 max-w-3xl mx-auto">
      <h3 class="text-2xl font-extrabold mb-6 text-gray-700 tracking-tight">
        Update Order Details
      </h3>

      <%= form_with(model: @order, url: order_path(@order), method: :patch, local: true, class: "space-y-6") do |f| %>
        <div>
          <%= f.label :delivery_address, "Delivery Address", class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.text_area :delivery_address, rows: 3, class: "w-full border border-gray-300 rounded-md p-3 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div class="grid grid-cols-2 gap-6">
          <div>
            <%= f.label :latitude, "Latitude", class: "block text-gray-700 font-semibold mb-2" %>
            <%= f.number_field :latitude, step: 0.000001, class: "w-full border border-gray-300 rounded-md p-3 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>

          <div>
            <%= f.label :longitude, "Longitude", class: "block text-gray-700 font-semibold mb-2" %>
            <%= f.number_field :longitude, step: 0.000001, class: "w-full border border-gray-300 rounded-md p-3 focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
        </div>

        <div>
          <%= f.label :status, "Order Status", class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.select :status, Order.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "w-full border border-gray-300 rounded-md p-3 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :delivery_boy_id, "Assign Delivery Boy", class: "block text-gray-700 font-semibold mb-2" %>
          <%= f.collection_select :delivery_boy_id, DeliveryBoy.all, :id, :name, { include_blank: "Select Delivery Boy" }, class: "w-full border border-gray-300 rounded-md p-3 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.submit "Update Order", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-md shadow transition duration-300" %>
        </div>
      <% end %>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
  document.addEventListener("turbo:load", function () {
    if (!window.Stripe) return;

    const stripe = Stripe("<%= Rails.application.credentials.dig(:stripe, :publishable_key) %>");
    const elements = stripe.elements();
    const card = elements.create("card");
    card.mount("#card-element");

    const form = document.getElementById("stripe-form");
    if (!form) return;

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const { paymentMethod, error } = await stripe.createPaymentMethod({
        type: 'card',
        card: card,
      });

      if (error) {
        alert(error.message);
        return;
      }

      const res = await fetch("/payments/elements", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": document.querySelector("meta[name=csrf-token]").content
        },
        body: JSON.stringify({
          order_id: <%= @order.id %>,
          payment_method_id: paymentMethod.id
        })
      });

      const data = await res.json();

      if (data.error) {
        alert(data.error);
      } else {
        const result = await stripe.confirmCardPayment(data.client_secret);
        if (result.error) {
          alert(result.error.message);
        } else {
          window.location.href = "/payments/success?intent_id=" + data.intent_id;
        }
      }
    });
  });
</script>
