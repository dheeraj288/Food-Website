<h2 class="text-2xl font-bold mb-4 text-gray-800">
  ðŸ§¾ Order Summary - <%= @order.id %>
</h2>

<div class="bg-white p-6 rounded shadow-md border">
  <div class="mb-4">
    <p class="text-gray-600">
      Status:
      <span class="text-indigo-700 font-semibold">
        <%= @order.status.capitalize %>
      </span>
    </p>
    <p class="text-gray-600">
      Placed on: <%= @order.created_at.strftime("%d %b %Y, %I:%M %p") %>
    </p>
  </div>

  <div class="space-y-4">
    <% @order.order_items.includes(:menu_item).each do |item| %>
      <div class="flex justify-between items-center border-b pb-3">
        <div class="flex items-center gap-4">
          <% if item.menu_item&.image_url.present? %>
            <%= image_tag item.menu_item.image_url, alt: item.menu_item.name, class: "w-16 h-16 rounded object-cover" %>
          <% end %>
          <div>
            <p class="font-medium text-gray-800">
              <%= item.menu_item&.name || "Menu item not found" %>
            </p>
            <p class="text-sm text-gray-500">
              Qty: <%= item.quantity %> Ã— â‚¹<%= item.price %>
            </p>
          </div>
        </div>
        <p class="text-indigo-700 font-bold">
          â‚¹<%= item.quantity * item.price %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-right">
    <h3 class="text-xl font-bold text-indigo-800">
      Total: â‚¹<%= @order.total %>
    </h3>
  </div>

  <%# âœ… Show Stripe Elements form only if order is NOT paid or confirmed %>
  <% unless ["paid", "confirmed"].include?(@order.status.downcase) %>
    <div id="payment-form" class="mt-6">
      <form id="stripe-form">
        <div id="card-element" class="border p-3 rounded mb-4"></div>

        <button type="submit"
                class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded shadow">
          ðŸ’³ Pay â‚¹<%= @order.total %>
        </button>
      </form>
    </div>
  <% end %>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
  document.addEventListener("turbo:load", function () {
    if (!window.Stripe) return;

    const stripe = Stripe("<%= Rails.application.credentials.dig(:stripe, :publishable_key) %>");
    const elements = stripe.elements();
    const card = elements.create("card");
    card.mount("#card-element");

    const form = document.getElementById("stripe-form");
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const { paymentMethod, error } = await stripe.createPaymentMethod({
        type: 'card',
        card: card,
      });

      if (error) {
        alert(error.message);
        return;
      }

      const res = await fetch("/payments/elements", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": document.querySelector("meta[name=csrf-token]").content
        },
        body: JSON.stringify({
          order_id: <%= @order.id %>,
          payment_method_id: paymentMethod.id
        })
      });

      const data = await res.json();

      if (data.error) {
        alert(data.error);
      } else {
        const result = await stripe.confirmCardPayment(data.client_secret);
        if (result.error) {
          alert(result.error.message);
        } else {
          // Redirect with intent_id from the server response
          window.location.href = "/payments/success?intent_id=" + data.intent_id;
        }
      }
    });
  });
</script>
