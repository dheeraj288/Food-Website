<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-5 py-4 flex justify-between items-center">

    <!-- Brand Name -->
    <h1 class="text-2xl font-bold text-indigo-700 flex items-center gap-1">
      üçõ <span>BiharBhojan</span>
    </h1>

    <!-- Navigation -->
    <nav class="flex items-center space-x-4 text-sm">

      <% if user_signed_in? %>
        <!-- User Info -->
        <span class="text-gray-700 flex items-center gap-2">
          üëã <strong><%= current_user.email %></strong>
          <span class="px-2 py-0.5 rounded-full text-white text-xs font-semibold capitalize
            <%= admin_user? ? 'bg-blue-500' : restaurant_owner_user? ? 'bg-green-500' : 'bg-purple-500' %>">
            <%= current_user.role %>
          </span>
        </span>

        <!-- Role-specific Links -->
        <% if admin_user? %>
          <%= link_to "Admin Dashboard", admin_dashboard_path,
              class: "text-blue-600 hover:text-blue-800 transition" %>
        <% elsif restaurant_owner_user? %>
          <%= link_to "Owner Dashboard", owner_dashboard_path,
              class: "text-green-600 hover:text-green-800 transition" %>
        <% elsif customer_user? %>
          <%= link_to "Customer Dashboard", customer_dashboard_path,
              class: "text-purple-600 hover:text-purple-800 transition" %>
        <% end %>

        <!-- Logout -->
        <%= link_to "Logout", destroy_user_session_path,
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "text-red-500 hover:text-red-700 transition" %>

      <% else %>
        <!-- Auth Links -->
        <%= link_to "Login", new_user_session_path,
            class: "text-blue-600 hover:text-blue-800 transition" %>
        <%= link_to "Sign Up", new_user_registration_path,
            class: "text-green-600 hover:text-green-800 transition" %>
      <% end %>

    </nav>
  </div>
</header>
