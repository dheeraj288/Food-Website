<%= form_with model: [@restaurant, @menu_item], local: true, class: "space-y-4 bg-white p-6 rounded-xl shadow-md max-w-xl mx-auto" do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 w-full border border-gray-300 rounded p-2" %>
  </div>

  <div>
  <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
  <%= f.text_area :description, class: "mt-1 w-full border border-gray-300 rounded p-2", rows: 4 %>
</div>

  <div>
    <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :price, step: 0.01, class: "mt-1 w-full border border-gray-300 rounded p-2" %>
  </div>

  <div>
  <%= f.label :dish_category_id, "Dish Category", class: "block text-sm font-medium text-gray-700" %>
  <%= f.collection_select :dish_category_id, DishCategory.all, :id, :name, {}, class: "mt-1 block w-full border rounded p-2" %>
</div>

  <%= f.submit class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded" %>
<% end %>
