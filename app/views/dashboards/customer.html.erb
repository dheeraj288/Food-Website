<!-- app/views/dashboards/customer.html.erb -->

<div class="bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold text-purple-700 mb-4">👋 Welcome, Customer</h1>
  <p class="text-gray-600 mb-6">Explore your orders, favorites, and reviews.</p>

  <!-- Customer Dashboard Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- My Orders -->
    <div class="bg-purple-50 p-4 rounded shadow hover:bg-purple-100 transition">
      <h2 class="text-lg font-semibold text-purple-700 mb-1">📦 My Orders</h2>
      <p class="text-sm text-gray-600">View your order history and re-order easily.</p>
      <%= link_to "View Orders", "#", class: "text-purple-600 hover:underline text-sm mt-2 inline-block" %>
    </div>

    <!-- Favorite Restaurants -->
    <div class="bg-pink-50 p-4 rounded shadow hover:bg-pink-100 transition">
      <h2 class="text-lg font-semibold text-pink-700 mb-1">❤️ Favorite Restaurants</h2>
      <p class="text-sm text-gray-600">Your saved restaurants in one place.</p>
      <%= link_to "View Favorites", "#", class: "text-pink-600 hover:underline text-sm mt-2 inline-block" %>
    </div>

    <!-- Leave a Review -->
    <div class="bg-yellow-50 p-4 rounded shadow hover:bg-yellow-100 transition">
      <h2 class="text-lg font-semibold text-yellow-700 mb-1">💬 My Reviews</h2>
      <p class="text-sm text-gray-600">Check or edit your submitted reviews.</p>
      <%= link_to "Manage Reviews", "#", class: "text-yellow-600 hover:underline text-sm mt-2 inline-block" %>
    </div>

    <!-- Track Orders -->
    <div class="bg-green-50 p-4 rounded shadow hover:bg-green-100 transition">
      <h2 class="text-lg font-semibold text-green-700 mb-1">🚚 Track Order</h2>
      <p class="text-sm text-gray-600">Track your current delivery status.</p>
      <%= link_to "Track Now", "#", class: "text-green-600 hover:underline text-sm mt-2 inline-block" %>
    </div>
    
  </div>
</div>
